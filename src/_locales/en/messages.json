    "message": "User Script: $NAME$",
    "description": "Label used for user scripts with a name in gesture status, etc.",
    "placeholders": {
      "name": {
        "content": "$1",
        "example": "My Custom Script"
      }
    }
  },

  "statusGestureProgress": {
    "message": "Gesture: $GESTURE$",
    "description": "Status message during a gesture",
    "placeholders": {
      "gesture": {
        "content": "$1",
        "example": "LR"
      }
    }
  },

  "statusGestureUnknown": {
    "message": "Unknown Gesture: $GESTURE$",
    "description": "Status message when a gesture is not mapped to a command",
    "placeholders": {
      "gesture": {
        "content": "$1",
        "example": "LR"
      }
    }
  },

  "statusGestureKnown": {
    "message": "Gesture: $GESTURE$ ($COMMAND$)",
    "description": "Status message when a gesture is mapped to a command",
    "placeholders": {
      "gesture": {
        "content": "$1",
        "example": "LR"
      },
      "command": {
        "content": "$2",
        "example": "New Tab"
      }
    }
  },

