{

  "manifest_version": 2,
  "name": "Foxy Gestures",
  "version": "1.0.5",
  "applications": {
    "gecko": {
      "id": "{e839c3f9-298e-4cd0-99e0-464431cb7c34}",
      "strict_min_version": "53.0"
    }
  },

  "description": "Mouse gestures for Firefox",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "downloads",
    "sessions",
    "storage",
    "tabs"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

  "options_ui": {
    "page": "options/options.html"
  },

  "background": {
    "scripts": [
      "common/Optional.js",
      "common/settings.js",
      "background/helpers.js",
      "background/commands.js",
      "background/handler.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "content/helpers.js",
        "content/commands.js",
        "content/mouseEvents.js"
      ]
    },
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": false,
      "run_at": "document_start",
      "js": [
        "common/MouseDeltaAccumulator.js",
        "common/UDLRGestureDetector.js",
        "common/settings.js",
        "content/interface.js",
        "content/handler.js"
      ]
    }
  ]

}
